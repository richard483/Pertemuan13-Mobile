<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryActivity">

    <TextView
        android:id="@+id/welcome_gallery_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Gallery"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="32dp"/>

    <ImageView
        android:id="@+id/gallery_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8F8F8F"
        app:layout_constraintTop_toBottomOf="@id/welcome_gallery_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/gallery_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description here"
        app:layout_constraintTop_toBottomOf="@id/gallery_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>